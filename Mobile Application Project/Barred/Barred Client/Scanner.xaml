<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Barred_Client.Scanner"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:program="clr-namespace:Barred_Client"
    xmlns:scanner="clr-namespace:BarcodeScanning;assembly=BarcodeScanning.Native.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{x:Static program:MauiProgram.ThemeColor}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <program:MenuOption
            action="DEFAULT"
            scan="False"
            x:Key="MenuCtx" />
    </ContentPage.Resources>

    <Grid
        Margin="0,5,0,0"
        Padding="30"
        RowDefinitions="Auto, Auto, Auto, *, Auto"
        RowSpacing="25">

        <Grid
            ColumnDefinitions="*,*"
            Grid.Row="0"
            HorizontalOptions="FillAndExpand">
            <Image
                Aspect="AspectFit"
                Grid.Column="0"
                Source="node_red_icon.png"
                WidthRequest="80"
                x:Name="IMG_Icon" />
            <Label
                FontSize="24"
                Grid.Column="1"
                Text="{x:Static program:MauiProgram.Group}"
                VerticalOptions="Center" />
        </Grid>

        <Grid
            ColumnDefinitions="*,*"
            Grid.Row="1"
            HorizontalOptions="FillAndExpand">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Grid.Column="0"
                HorizontalOptions="Center"
                Text="User/Device" />
            <Label
                FontSize="18"
                Grid.Column="1"
                HorizontalOptions="Center"
                Text="{x:Static program:MauiProgram.UserLabel}" />
        </Grid>

        <Border
            Background="{x:Static program:MauiProgram.ThemeColor}"
            Grid.Row="2"
            Stroke="{x:Static program:MauiProgram.ThemeColor}"
            StrokeThickness="3">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Brush="black"
                    Offset="5,5"
                    Opacity="0.8" />
            </Border.Shadow>
            <Grid HeightRequest="150" WidthRequest="350">
                <scanner:CameraView
                    BarcodeSymbologies="All"
                    CameraEnabled="True"
                    HeightRequest="150"
                    OnDetectionFinished="ScannerEl_OnOnDetectionFinished"
                    TapToFocusEnabled="True"
                    ViewfinderMode="True"
                    WidthRequest="350"
                    x:Name="ScannerEl" />
                <BoxView
                    BackgroundColor="Red"
                    HeightRequest="5"
                    HorizontalOptions="Fill"
                    Opacity="0.3"
                    VerticalOptions="Center" />
            </Grid>

        </Border>

        <Border
            Background="{x:Static program:MauiProgram.ThemeColor}"
            Grid.Row="3"
            HorizontalOptions="FillAndExpand"
            Stroke="{x:Static program:MauiProgram.ThemeColor}"
            StrokeThickness="3"
            VerticalOptions="FillAndExpand">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Brush="black"
                    Offset="5,5"
                    Opacity="0.8" />
            </Border.Shadow>

            <ScrollView
                BackgroundColor="LightGrey"
                HorizontalOptions="FillAndExpand"
                Padding="5"
                VerticalOptions="FillAndExpand">
                <Label
                    FontSize="16"
                    LineBreakMode="WordWrap"
                    x:Name="Status">
                    <Label.FormattedText>
                        <FormattedString />
                    </Label.FormattedText>
                </Label>

            </ScrollView>
        </Border>

        <Grid
            ColumnDefinitions="Auto,*,Auto"
            ColumnSpacing="15"
            Grid.Row="4">
            <StackLayout
                Grid.Column="0"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="6">
                <Button
                    BackgroundColor="Red"
                    Clicked="Button_Delete"
                    FontSize="20"
                    Text="D" />
                <Button
                    BackgroundColor="{x:Static program:MauiProgram.ThemeColor}"
                    BindingContext="{StaticResource MenuCtx}"
                    Clicked="Button_Menu"
                    FontSize="20"
                    Text="M" />


            </StackLayout>


            <Label
                Grid.Column="1"
                HorizontalOptions="Center"
                Text="Audio Feedback"
                VerticalOptions="Center" />
            <Switch
                Grid.Column="2"
                HorizontalOptions="Center"
                IsToggled="True"
                OnColor="GreenYellow"
                ThumbColor="{x:Static program:MauiProgram.ThemeColor}"
                VerticalOptions="Center"
                x:Name="AudioSwitch" />
        </Grid>

    </Grid>

</ContentPage>
